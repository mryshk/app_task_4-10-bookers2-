<%= render 'users/list',user: @user, book: @book %>

    <div class="col-md-8 offset-md-1 mt-3">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <th><%= attachment_image_tag book.user, :profile_image,:fill,100,100,format: 'jpeg', fallback: "no_image.jpg",size: '40x40' %></th>
            <th>
              <%= link_to book_path(book.id) do %>
              <%= book.title %></th>
              <% end %>
            <th><%= book.body %></th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>