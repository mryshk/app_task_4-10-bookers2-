<div class="container">
  <div class="error_explanation" >
    <% if @user.errors.any? %>
    <h3>
    <%= @user.errors.count %>&nbsp;erros prohibited this obj from being saved:
    </h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
  <div>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
       <div>
        <div><label for="inputName">Name</label></div>
        <div><%= f.text_field :name, placeholder:"名前" %></div>
       </div>
       <div>
        <div><label for="inputImage">Image</label></div>
        <div><%= f.attachment_field :profile_image, placeholder: "image" %></div>
       </div>
       <div>
        <div><label for="inputIntroduction">Introduction</label></div>
         <div><%= f.text_area :introduction %></div>
       </div>
        <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>
</div>