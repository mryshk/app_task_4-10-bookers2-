<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <div class="error_explanation" >
        <% if @book.errors.any? %>
        <h3>
        <%= @book.errors.count %>&nbsp;erros prohibited this obj from being saved:
        </h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
        <% end %>
      </div>
      <%= form_with model:@book, local:true do |f| %>
      <div>
        <div>
          <div><label for="book_title">Title</label></div>
          <%= f.text_field :title, autofocus: true, id:"book_title" %></div>
        </div>
        <div>
          <div><label for="book_opinion">Opinion</label></div>
          <div><%= f.text_area :body, id:"book_body" %></div>
        </div>
          <div class="btn btn-success">
          <div><%= f.submit "Update Book" %></div>
        </div>
        <% end %>
        <sapn><%= link_to "show", book_path(@book)  %></sapn>
        <span>|</span>
        <span><%= link_to "Back", books_path %></span>
      </div>
    </div>
  </div>
</div>

