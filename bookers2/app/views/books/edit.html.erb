<div class="container mt-3">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= render "layouts/errors", obj: @book %>
      <div>
        <%= form_with model:@book, local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <div><%= f.text_field :title, autofocus: true, id:"book_title" , class: "form-control" %></div>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <div><%= f.text_area :body, id:"book_body" , class: "form-control" %></div>
        </div>
        <div class="form-group">
         <label for="book_category">Category</label>
         <div><%= f.text_area :category, class: "form-control"  %></div>
        </div>

        <div id="book_rate">
          <label for="book_rate">Rate</label>
        </div>

        <script>
          $('#book_rate').raty({
            starOn: "<%= asset_path('star-on.png')  %>",
            starOff: "<%= asset_path('star-off.png')  %>",
            starHalf: "<%= asset_path('star-half.png')  %>",
            scoreName: "book[rate]",
            half: true,
          });
        </script>

        <div class="form-group">
          <button class="btn btn-success">
          <% f.submit %>Update Book</button>
        </div>
          <% end %>
      <div>
          <sapn><%= link_to "Show", book_path(@book)  %></sapn>
          <span>|</span>
          <span><%= link_to "Back", books_path %></span>
        </div>
      </div>
    </div>
  </div>
</div>

