<%= render 'users/list',user: @user, book: @book_s %>

    <div class="col-md-8 offset-md-1 mt-3">
      <h2>Book detail</h2>
      <table class="table table-striped">
       <tbody>
         <tr>
          <td>
           <div><%= attachment_image_tag @book.user,:profile_image,:fill,100,100 %></div>
           <div><%= link_to user_path(@book.user_id) do %>
           <%= @book.user.name %>
           <% end %>
           </div>
          </td>
          <td>
          <%= link_to book_path(@book) do %>
          <%= @book.title %>
          <% end %>
          </td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
           <td><span class="btn btn-sm btn-success"><%= link_to "Edit", edit_book_path(@book)%></span></td>
           <td><span class="btn btn-sm btn-danger"><%= link_to "Destroy", book_path(@book),method: :delete, "data-confirm"=> "本当に消しますか？" %></span></td>
          <% end %>
       </tbody>
      </table>
    </div>
  </div>
</div>



