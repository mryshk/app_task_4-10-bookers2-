 <div class="col-md-8 offset-md-1 mt-3 pr-4">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% books.each do |book| %>
          <td>
            <td><%= link_to user_path(book.user_id) do %><%= attachment_image_tag book.user, :profile_image,:fill,100,100,format: 'jpeg', fallback: "no_image.jpg",size: '40x40' %>
             <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
              <%= book.title %></td>
              <% end %>
            <td><%= book.body %></td>
            <td><% if book.favorite_by?(current_user)%>
                 <p><%= link_to book_favorites_path(book), method: :delete ,class: "text-danger" do %>♥<%= book.favorites.count %><% end %></p>
                <% else  %>
                 <p><%= link_to book_favorites_path(book), method: :post do %>♥<%= book.favorites.count %><% end %></p>
                <% end %>
            </td>
            <td>コメント数:<%= book.book_comments.count %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>