      <h2>Books</h2>
      <%= link_to "新しい順",books_path(sort_new: "true") %>｜<%= link_to "評価の高い順" ,books_path(sort_rate: "true")  %>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th>Category</th>
            <th>いいね数</th>
            <th>コメント数</th>
            <th>Rate</th>
            <th>閲覧数</th>
          </tr>
        </thead>
        <tbody>
          <% books.each do |book| %>
          <td>
            <td><%= link_to user_path(book.user_id) do %><%= attachment_image_tag book.user, :profile_image,:fill,100,100,format: 'jpeg', fallback: "no_image.jpg",size: '40x40' %>
             <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
              <%= book.title %></td>
              <% end %>
            <td><%= book.body %></td>
            <td><%= book.category %></td>
            <td id ="book_favorites_<%= book.id %>">
              <%= render 'favorites/favorite',book: book %>
            </td>
            <td><%= book.book_comments.count %></td>
            <td class="book_rate_<%= book.id  %>" data-score="<%= book.rate %>"></td>
            <td><%= book.impressions_count %></td>
          </tr>
          <script>
          $('.book_rate_<%= book.id  %>').empty();
            $('.book_rate_<%= book.id  %>').raty({
              readOnly: true,
              score: function(){
                return $(this).attr('data-score');
              },
              path: '/assets/'
            });
          </script>
          <% end %>
        </tbody>
      </table>