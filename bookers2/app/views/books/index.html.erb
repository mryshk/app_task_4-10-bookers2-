<% if @book.errors.any? %>
    <h3>
    <%= @book.errors.count %>&nbsp;erros prohibited this obj from being saved:
    </h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
<% end %>
<%= render 'users/list',user: @user, book: @book %>

    <div class="col-md-8 offset-md-1 mt-3">
      <h2>Books</h2>
      <table class="table table-hover table-inverse table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book|%>
          <tr>
            <td><%= attachment_image_tag book.user ,:profile_image,:fill,100,100, format: 'jpeg', fallback: "no_image.jpg",size: '40x40' %></td>
            <td><%= link_to book_path(book.id) do %>
                <%= book.title %>
                <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>