<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <table>
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>intoduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
        <div class="row">
        <% if @user.id == current_user.id %>
          <%= link_to edit_user_path(@user)%>
        <% else %>
          <%= link_to user_path(current_user.id)%>
        <% end %>
        </div>

      <h2 class="mt-3">New Book</h2>
      <% form_with model :@book local:true do |f| %>
       <%= f.text_field :title %>
       <%= f.text_area :body %>
       <%= f.submit "Create Book"%>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book|%>
          <tr>
            <td><%= attachment_image_tag book.user ,:profile_image %></td>
            <td><%= link_to book_path(book.id) do %>
                <%= book.title %>
                <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>