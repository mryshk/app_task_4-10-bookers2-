<div class="container px-5 px-sm-0">
  <div class="error_explanation" >
    <% if @book.errors.any? %>
    <h3>
    <%= @book.errors.count %>&nbsp;erros prohibited this obj from being saved:
    </h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
  <div>
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <table>
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>intoduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
        <div class="row">
        <% if @user.id == current_user.id %>
          <%= link_to "edit", edit_user_path(@user)%>
        <% else %>
          <%= link_to "edit", user_path(current_user.id)%>
        <% end %>
        </div>

      <h2 class="mt-3">New Book</h2>
      <%= form_with model: @book, local:true do |f| %>
      <div>
        <label for="form-groupe">Title</label>
        <%= f.text_field :title %>
      </div>
      <div>
        <div><label for="form-groupe">Opinion</label></div>
        <div><%= f.text_area :body %></div>
      </div>
      <div>
        <%= f.submit "Create Book"%>
      </div>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book|%>
          <tr>
            <td><%= attachment_image_tag book.user ,:profile_image,:fill,100,100 %></td>
            <td><%= link_to book_path(book.id) do %>
                <%= book.title %>
                <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>