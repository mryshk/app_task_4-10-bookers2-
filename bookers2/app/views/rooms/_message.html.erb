 <div class="row mt-4" id="message">
    <div class="col-md-8 offset-md-1 mt-3 pr-4">
　　　　<div class="chats">
　　　　　　<div class="chat">
　　　　　　  <% if messages.present? %>
　　　　　　    <% messages.each do |m| %>
　　　　　　      <div class="chat-box">
　　　　　　        <div class="chat-face d-inline">
　　　　　　          <%= attachment_image_tag m.user,:profile_image,:fill,100,100, fallback: "no_image.jpg",size: '40x40' ,class: "user-image" %>
　　　　　　        </div>
　　　　　　        <div class="chat-hukidashi d-inline"> <strong><%= m.content %></strong> <br>
　　　　　　        </div>
　　　　　　      </div>
　　　　　　    <% end %>
　　　　　　  <% end %>
　　　　　　</div>
　　　　　　<div class="posts">
　　　　　　  <div class="d-inline">
　　　　　　    <%= form_with model: message  o |f| %>
　　　　　　    <%= f.text_field :content, placeholder: "Message" , class: "form-inline form-control",size: "30" %>
　　　　　　      <%= f.hidden_field :room_id, value: room.id ,class: "form-inline" %>
　　　　　　  </div>
　　　　　　  <button class=" btn btn-info btn-sm"　type="submit"><i class="fab fa-telegram-plane"><%f.submit %></i>
　　　　　　  </button>
　　　　　　<% end %>
　　　　　　</div>
　　　　</div>
    </div>
  </div>