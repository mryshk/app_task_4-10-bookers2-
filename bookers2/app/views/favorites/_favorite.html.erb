<% if book.favorite_by?(current_user)%>
  <p><%= link_to book_favorites_path(book), method: :delete, class: "text-red", remote: true do %>♥<%= book.favorites.count %><% end %></p>
<% else  %>
  <p><%= link_to book_favorites_path(book), method: :post, remote: true do %>♥<%= book.favorites.count %><% end %></p>
<% end %>