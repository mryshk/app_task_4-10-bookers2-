<div class="container mt-3">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Edit Group</h1>
      <%= render "layouts/errors", obj: @group %>
      <div>
        <%= form_with model: @group, local:true do |f| %>
        <div class="form-group">
          <label for="group_name">グループ名</label>
          <div><%= f.text_field :name, autofocus: true, id: "group_name" , class:"form-control"%></div>
        </div>
        <div class="form-group">
          <label for="group_introduction">紹介文</label>
          <div><%= f.text_area :introduction, id: "group_introduction", class:"form-control" %></div>
        </div>
        <div>
          <label for="inputImage">グループ画像</label>
          <%= f.attachment_field :image, placeholder: "image", class:"form-control-file" %>
        </div>
        <div class="form-group mt-3">
          <button class="btn btn-success">
          <% f.submit %>Update Group</button>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

