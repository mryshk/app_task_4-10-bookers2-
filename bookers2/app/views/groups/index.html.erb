<div class="container px-5 px-sm-0">

<%= render 'layouts/header',user: @user%>

<%= render 'users/list',user: @user, book: @book_s %>


<div class="col-md-8 offset-md-1 mt-3 pr-4">
      <h2></h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @groups.each do |group| %>
          <td>
            <td><%= attachment_image_tag group, :image,:fill,100,100,format: 'jpeg', fallback: "no_image.jpg",size: '40x40' %>
            </td>
            <td>
              <%= link_to group_path(group) do %>
              <%= group.name %></td>
              <% end %>
            <td><%= group.introduction %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

</div>
