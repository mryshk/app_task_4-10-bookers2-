<div class="container mt-3">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Event Mail</h1>
      <div>
        <%= form_with url: group_send_mail_path(@group),method: :get, local:true do |f| %>
        <div class="form-group">
          <label for="mail_title">Title</label>
          <div><%= f.text_field :mail_title, autofocus: true, id: "mail_title" , class:"form-control"%></div>
        </div>
        <div class="form-group">
          <label for="mail_content">Content</label>
          <div><%= f.text_area :mail_content , id: "mail_content", class:"form-control" %></div>
        </div>
        <div class="form-group mt-3">
          <button class="btn btn-success">
          <% f.submit %>送信</button>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

